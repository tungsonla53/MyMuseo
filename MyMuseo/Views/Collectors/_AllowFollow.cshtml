
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


<div class="row">
    <div class="col-md-7">
        <span class="text21bold">Followers</span>
        <p class="text18">Choose who can follow you</p>
    </div>
    <div class="col-md-5">
@using (Ajax.BeginForm("_AllowFollow", "Collectors",
                                                        new AjaxOptions()
                                                        {
                                                            HttpMethod = "POST",
                                                            UpdateTargetId = "divAllowFollow",
                                                            OnSuccess = "callbackAllowFollow"
                                                        },
                                                        new { id = "formUpdateAllowFollow" }))
{
        <select name="allowfollowSelection" id="allowfollowSelection" class="form-control text18bold input-large">
            <option value="0">All Registered Users</option>
            <option value="1">Followers of My Followers</option>
        </select>

        <input type="submit" value="Update" class="btn btn-link text18" />
        <img src="~/Content/images/icons/privacy-saved.png" id="updateAllowFollowSaved" style="display:none;" />
}
    </div>
    <script>
        function callbackAllowFollow()
        {
            $("#allowfollowSelection").val("@ViewBag.AllowFollowId");
            $('#updateAllowFollowSaved').show();
        }
        $("#allowfollowSelection").val("@ViewBag.AllowFollowId");
    </script>
</div>
