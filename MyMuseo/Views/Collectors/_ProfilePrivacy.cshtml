
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


<div class="row">
    <div class="col-md-7">
        <span class="text21bold">Who can see my profile</span>
        <p class="text18">Choose who can see your profile</p>
    </div>
    <div class="col-md-5">
@using (Ajax.BeginForm("_ProfilePrivacy", "Collectors",
                    new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "divProfilePrivacy",
                        OnSuccess = "callbackProfilePrivacy"
                    },
                    new { id = "formUpdateProfilePrivacy" }))
{

            <select name="profileprivacySelection" id="profileprivacySelection" class="form-control text18bold input-large">
                <option value="0">Anyone</option>
                <option value="1">All Registered Users</option>
                <option value="2">People I Follow Only</option>
            </select>
            <input type="submit" value="Update" class="btn btn-link text18" />
            <img src="~/Content/images/icons/privacy-saved.png" id="updateProfilePrivacySaved" style="display:none;" />
            
}
        
        
    </div>
    <script>
        function callbackProfilePrivacy()
        {
            $("#profileprivacySelection").val("@ViewBag.ProfilePrivacyId");
            $('#updateProfilePrivacySaved').show();
        }
        $("#profileprivacySelection").val("@ViewBag.ProfilePrivacyId");
    </script>
</div>
