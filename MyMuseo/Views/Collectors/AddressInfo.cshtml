@model MyMuseo.Models.AddressInfo

@{
    ViewBag.Title = "Address Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/ckeditor/adapters/jquery.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="container" style="min-height:740px;">
    <div class="spacer20"></div>
    <div>
        <span style="font-size: 21px;font-weight:bold;">Register - Step 3 of 4</span>
    </div>
    <div class="spacer15"></div>

    <div class="row">

        <div class="col-md-4">
            <div class="list-group">
                <div class="list-group">
                    <div class="list-group">
                        <a href="~/Collectors/AccountInfo" type="button" class="col-md-12 list-group-item list-group-item-action " style="font-weight:bold; font-size:21px;margin-bottom:20px;">Account Information</a>
                        <a href="~/Collectors/ProfileInfo" type="button" class="col-md-12 list-group-item list-group-item-action " style="font-weight:bold;font-size:21px;margin-bottom:20px;">Profile Information</a>
                        <a href="~/Collectors/AddressInfo" type="button" class="col-md-12 list-group-item list-group-item-action active" style="font-weight:bold;font-size:21px;margin-bottom:20px;">Address Information</a>
                        <a href="~/Collectors/PrivacyPreferences" type="button" class="col-md-12 list-group-item list-group-item-action" style="font-weight:bold;font-size:21px;margin-bottom:20px;">Privacy Preferences</a>
                        <a href="javascript:document.getElementById('logoutForm').submit()" type="button" class="col-md-12 list-group-item list-group-item-action" style="font-weight:bold;font-size:21px;margin-bottom:20px;">Logout</a>
                    </div>
                </div>
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    @Html.AntiForgeryToken()
                }
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-7">
            @using (Html.BeginForm("AddressInfo", "Collectors", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
            {
                @Html.HiddenFor(model => model.CollectorId)
                @Html.HiddenFor(model => model.CreatedDate)

                <div class="form-group row">
                    <label class="col-md-4 text18">Street Address</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Street, new { @class = "textfield1" })
                        <br />@Html.ValidationMessageFor(model => model.Street, String.Empty, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 text18">Apt/Suite/Unit</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Apt, new { @class = "textfield1" })
                        @Html.ValidationMessageFor(model => model.Apt, String.Empty, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 text18">Country</label>
                    <div class="col-md-8">
                        @Html.DropDownList("CountryId", null, "Select...", new { @class = "textfield1", required="Select Country" })
                        <br />@Html.ValidationMessageFor(model => model.CountryId, String.Empty, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 text18">City</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.City, new { @class = "textfield1" })
                        <br />@Html.ValidationMessageFor(model => model.City, String.Empty, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 text18">State/Province/Region</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Region, new { @class = "textfield1" })
                        <br />@Html.ValidationMessageFor(model => model.Region, String.Empty, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 text18">Zip/PostalCode</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.ZipPostalCode, new { @class = "textfield1" })
                        <br />@Html.ValidationMessageFor(model => model.ZipPostalCode, String.Empty, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 text18">Phone Number</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "textfield1" })
                        <br />@Html.ValidationMessageFor(model => model.PhoneNumber, String.Empty, new { @class = "text-danger" })
                    </div>
                </div>
                <div>
                    @Html.ValidationSummary(true)
                </div>
                <div class="spacer20"></div>
                <div>
                    <input type="submit" value="Save" class="button1" />
                </div>

            }
        </div>

    </div>
</div>
