@model MyMuseo.Models.Group
@using MyMuseo.Models

@{
    ViewBag.Title = "Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
.nav-tabs > li > a:focus, 
.nav-tabs > li > a:hover 
{
    background-color: #000000;
}

.nav-tabs > .active > a {
    background-color: #000000!important;
}

</style>
<div class="spacer20"></div>
<div style="background: url(/Content/images/default-group-banner.jpg) no-repeat; background-size:cover; width: 100%; height: 240px; display:block;position:relative;">   
    @Html.Partial("_GroupHeader")
</div>
   
<div style="margin-left: 40px; margin-right: 40px;">
    <div class="spacer20"></div>
    <div>
    @if ((bool) ViewBag.IsGroupAdmin == true)
    {
        <button class="button1 pull-right hidden-xs" data-toggle="modal" data-target="#update_about"> Change <span class="glyphicon glyphicon-pencil"></span></button>
        <button class="btn btn-primary visible-xs" style="width: 100%;" data-toggle="modal" data-target="#update_about"> Change <span class="glyphicon glyphicon-pencil"></span></button>
    }
        <span class="page-header-text">About This Group</span>
    </div>
    <div><span class="text18">@Model.Description</span></div>
</div>

<div class="modal fade" id="update_about">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header well">
                <a href="#" data-dismiss="modal" class="class pull-right"><span class="glyphicon glyphicon-remove"></span></a>
                <h3 class="modal-title">About</h3>
            </div>
            <div class="modal-body">
                <div class="row" style="padding: 20px;">
                    @using (Html.BeginForm("UpdateAbout", "Groups", FormMethod.Post, new { id = "TheForm" }))
                    {
                        @Html.HiddenFor(model => model.GroupId)
                        <textarea id="comment" name="comment" class="textarea1" ></textarea>
                        <div class="spacer20"></div>
                        <div>
                            <button type="button" class="btn btn-primary" onclick="document.getElementById('TheForm').submit();"> Submit</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>    

   