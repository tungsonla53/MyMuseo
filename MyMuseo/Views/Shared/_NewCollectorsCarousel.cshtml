@using MyMuseo.Models

<link rel="stylesheet" href="~/Content/flexslider.css" type="text/css" media="screen" />

<style>
    .flexslider .slides img {
        height: 250px;
        width: auto;
    }

    .flex-direction-nav a {
        width: 50px!important;
        height: 50px!important;
    }

    .flex-direction-nav a.flex-prev:before {
        content: " ";
        display: block;
        background: url('../Content/images/icons/next_default.png');
        transform: rotate(180deg);
        background-repeat: no-repeat;
        width: 52px!important;
        height: 52px!important;
        margin-left: -2px;
        margin-top: -5px;
    }

    .flex-direction-nav a.flex-next:before {
        content: "  ";
        display: block;
        background: url('../Content/images/icons/next_default.png');
        background-repeat: no-repeat;
        width: 52px!important;
        height: 52px!important;
        margin-left: -0px;
        margin-top: -0px;
    }

</style>

<div class="col-md-12 hidden-xs" style="padding-left: 15px; padding-right:15px;">
    <div class="spacer40"></div>
    <div><span style="font-size: 24px; font-weight: 300; color: #444444; font-family: Avenir-Book;">New to myMuseo</span></div>
    <div style="width:100%">
        <div class="flexslider carousel" id="newcollectors">
            <ul class="slides">
                @{
                    int item = 0;
                    foreach (Collector collector in ViewBag.NewCollectors)
                    {
                        <li>
                            <div >
                                <a href="/Home/CollectorDetail/@collector.CollectorId" style="color:#444444;font-size: 18px;">
                                    <div style="width:250px; height: 250px;overflow:hidden;" class="product-div2" >
                                        <img src="@collector.ProfileImage" height="250" alt="Image">
                                    </div>
                                    <span>@collector.FirstName @collector.LastName</span>  
                                </a>
                            </div>
                        </li>
                        item++;
                    }
                    while (item < 20)
                    {
                        <li>
                            <div>
                                <a style="color:#444444;font-size: 18px;">
                                    <div style="width:250px; height: 250px;overflow:hidden;" class="product-div2">
                                        <img src="~/Content/images/place-holder.png" height="250" alt="Image">
                                    </div>
                                    <span>Collector @item</span>   
                                </a>
                            </div>
                        </li>
                        item++;
                    }
                }
            </ul>
        </div>
     </div>
</div>    

<script defer src="~/Scripts/jquery.flexslider.js"></script>

<script>
    $(document).ready(function () {
        $('#newcollectors').flexslider({
            animation: "slide",
            controlNav: false,
            slideshow: false,
            animationLoop: false,
            itemWidth: 250,
            itemMargin: 20,
            minItems: 1,
            maxItems: 7
        });
    });
</script>

<div class="col-md-12 visible-xs" style="padding-left: 15px; padding-right:15px; margin-top: -20px;">
    <div class="spacer10"></div>
    <div><span style="font-size: 24px; font-weight: 300; color: #444444; font-family: Avenir-Book;">New to myMuseo</span></div>
    <div style="width:100%">
        <div class="flexslider carousel" id="newcollectors-m">
            <ul class="slides">
                @{
                    foreach (Collector collector in ViewBag.NewCollectors)
                    {
                        <li>
                            <div>
                                <a href="/Home/CollectorDetail/@collector.CollectorId" style="color:#444444;font-size: 18px;">
                                    <div>
                                        <img src="@collector.ProfileImage" class="image-responsive" alt="Image" style="width: 115px;height:115px;">
                                    </div>
                                    <span>@collector.FirstName @collector.LastName</span>
                                </a>
                            </div>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#newcollectors-m').flexslider({
            animation: "slide",
            controlNav: false,
            slideshow: false,
            animationLoop: false,
            itemWidth: 115,
            itemMargin: 10,
            minItems: 2,
            maxItems: 7,
            directionNav: false
        });
    });
</script>