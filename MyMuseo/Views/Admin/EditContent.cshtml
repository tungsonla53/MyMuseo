@model MyMuseo.Models.ContentModel
@{
    ViewBag.Title = "Edit Content";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/ckeditor/adapters/jquery.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


    
    <div style="margin-left: 25px; margin-right: 25px; min-height: 760px;">
        <div class="spacer40"></div>
        <div>
            <span style="font-size: 21px;font-weight:bold;">Content Setting</span>
        </div>
        <div class="spacer15"></div>
        @using (Html.BeginForm("EditContent", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
        {
            @Html.HiddenFor(model => model.ContentId)
            <div class="form-group">
                <label class="text18">Content Name</label>
                <div class="text18">
                    @Html.TextBoxFor(model => model.ContentName, new { @class = "textfield1" })
                    @Html.ValidationMessageFor(model => model.ContentName)
                </div>
            </div>
            <div class="form-group">
                <label class="text18">Content Text</label>
            </div>
            <div class="text18">
                @Html.TextAreaFor(model => model.ContentText, new { @class = "textarea1", @style= "width: 100% !important; height: 600px !important;" })
                @Html.ValidationMessageFor(model => model.ContentText)
            </div>
            <div style="padding:20px;"></div>
            <div class="form-group">
                <input type="submit" value="Submit" class="button1" />
            </div>
        }
    </div>
    




