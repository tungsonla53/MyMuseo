
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


<div class="row">
    <div class="col-md-7">
        <span class="text21bold">Who can see your followers and who you are following</span>
        <p class="text18">Choose who can see your connections</p>
    </div>
    <div class="col-md-5">
@using (Ajax.BeginForm("_FollowPrivacy", "Collectors",
                                new AjaxOptions()
                                {
                                    HttpMethod = "POST",
                                    UpdateTargetId = "divFollowPrivacy",
                                    OnSuccess = "callbackFollowPrivacy"
                                },
                                new { id = "formUpdateFollowPrivacy" }))
{
        <select name="followprivacySelection" id="followprivacySelection" class="form-control text18bold input-large">
            <option value="0">All Registered Users</option>
            <option value="1">My Followers</option>
            <option value="2">Only me</option>
        </select>
        
        <input type="submit" value="Update" class="btn btn-link text18" />
        <img src="~/Content/images/icons/privacy-saved.png" id="updateFollowPrivacySaved" style="display:none;" />
}
    </div>
    <script>
        function callbackFollowPrivacy()
        {
            $("#followprivacySelection").val("@ViewBag.FollowPrivacyId");
            $('#updateFollowPrivacySaved').show();
        }
        $("#followprivacySelection").val("@ViewBag.FollowPrivacyId");
    </script>
</div>