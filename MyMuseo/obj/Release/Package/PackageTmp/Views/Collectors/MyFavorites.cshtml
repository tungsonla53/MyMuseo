@model MyMuseo.Models.Collector
@using MyMuseo.Models

@{
    ViewBag.Title = "Favorites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="spacer20"></div>
<div class="row" style="margin-left: 15px; margin-right: 15px;"><div class="col-md-4"><a href="~/Home/CollectorDetail/@Model.CollectorId" class="page-header-text"> @Session["FullName"]</a></div></div>
<div class="spacer20"></div>
@if (Request.IsAuthenticated && (ViewBag.IsMe == true))
{
<div class="row" style="margin-left: 15px; margin-right: 15px;">
    <div class="col-md-4 col-xs-12">
        <a href="~/Collectors/MyCollections/@Model.CollectorId" style="text-decoration: none;"><div class="btn btn-default btn-block"><span class="text21bold">My Collections (@ViewBag.CollectionsCount)</span></div></a>
    </div>
    <div class="col-md-4 col-xs-12">
        <a href="~/Collectors/MyCollectibles/@Model.CollectorId" style="text-decoration: none;"><div class="btn btn-default btn-block"><span class="text21bold">My Items (@ViewBag.CollectiblesCount)</span></div></a>
    </div>
    <div class="col-md-4 col-xs-12">
        <a href="~/Collectors/MyFavorites/@Model.CollectorId" style="text-decoration: none;color: #ffffff;"><div class="btn btn-primary btn-block"><span class="text21bold">My Favorites (@ViewBag.FavoritesCount)</span></div></a>
    </div>
 </div>
}
else
{
    <div class="row" style="margin-left: 15px; margin-right: 15px;">
        <div class="col-md-4 col-xs-12">
            <a href="~/Collectors/MyCollections/@Model.CollectorId" style="text-decoration: none;"><div class="btn btn-default btn-block"><span class="text21bold"> Collections (@ViewBag.CollectionsCount)</span></div></a>
        </div>
        <div class="col-md-4 col-xs-12">
            <a href="~/Collectors/MyCollectibles/@Model.CollectorId" style="text-decoration: none;"><div class="btn btn-default btn-block"><span class="text21bold"> Items (@ViewBag.CollectiblesCount)</span></div></a>
        </div>
        <div class="col-md-4 col-xs-12">
            <a href="~/Collectors/MyFavorites/@Model.CollectorId" style="text-decoration: none;"><div class="btn btn-primary btn-block"><span class="text21bold"> Favorites (@ViewBag.FavoritesCount)</span></div></a>
        </div>
    </div>
}
<div class="spacer20"></div>
 <div class="row" style="margin-left: 15px; margin-right: 15px; min-height: 640px;">
    @{
        foreach (Collectible collectible in ViewBag.MyFavorites)
        {
            <div class="col-md-3" style="padding: 20px;">
                <div>
                    <a href="~/Home/CollectibleDetail/@collectible.CollectibleId"><img src="@collectible.ThumbImage" width="250" height="250" /></a>
                </div>
                <div><span class="text18">@collectible.Title</span></div>
            </div>
        }
    }
 </div>
