@model MyMuseo.Models.Collector

@{
    ViewBag.Title = "Account Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/ckeditor/adapters/jquery.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="container">
    <div class="spacer20"></div>
    <div>
        <span class="text21bold">Register - Step 1 of 4</span>
    </div>
    <div class="spacer15"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="list-group">
                <div class="list-group">
                    <a href="~/Collectors/AccountInfo" type="button" class="col-md-12 list-group-item list-group-item-action active" style="font-weight:bold; font-size:21px;margin-bottom:20px;">Account Information</a>
                    <a href="~/Collectors/ProfileInfo" type="button" class="col-md-12 list-group-item list-group-item-action " style="font-weight:bold;font-size:21px;margin-bottom:20px;">Profile Information</a>
                    <a href="~/Collectors/AddressInfo" type="button" class="col-md-12 list-group-item list-group-item-action" style="font-weight:bold;font-size:21px;margin-bottom:20px;">Address Information</a>
                    <a href="~/Collectors/PrivacyPreferences" type="button" class="col-md-12 list-group-item list-group-item-action" style="font-weight:bold;font-size:21px;margin-bottom:20px;">Privacy Preferences</a>
                    <a href="javascript:document.getElementById('logoutForm').submit()" type="button" class="col-md-12 list-group-item list-group-item-action" style="font-weight:bold;font-size:21px;margin-bottom:20px;">Logout</a>
                </div>
            </div>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()
            }
        </div>

        <div class="col-md-8">
            @using (Html.BeginForm("AccountInfo", "Collectors", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
            {
                @Html.HiddenFor(model => model.CollectorId)
                <fieldset>
                    <div>
                        <label for="FirstName" class="text18">First Name</label>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "textfield1" })
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>

                    <div>
                        <label for="LastName" class="text18">Last Name</label>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "textfield1" })
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                    <div>
                        <label class="text18">I am</label>
                    </div>
                    <div class="form-group">
                        @Html.DropDownList("TypeId", null, "Select...", new { @class = "textfield1" })
                        @Html.ValidationMessageFor(model => model.TypeId)
                    </div>
                    <div class="form-group">
                        @Html.ValidationSummary(true)
                    </div>
                    <div class="spacer20"></div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="button1" />
                    </div>
                </fieldset>
            }
        </div>

    </div>

</div>