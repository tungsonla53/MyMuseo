@model MyMuseo.Models.TemplateModel
@{
    ViewBag.Title = "Edit Email Template";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/ckeditor/adapters/jquery.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


    
    <div style="margin-left: 25px; margin-right: 25px; min-height: 760px;">
        <div class="spacer40"></div>
        <div>
            <span style="font-size: 21px;font-weight:bold;">Email Template</span>
        </div>
        <div class="spacer15"></div>
        @using (Html.BeginForm("EditEmailTemplate", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
        {
            @Html.HiddenFor(model => model.TemplateId)
            <div class="form-group">
                <label class="text18">Template Name</label>
                <div class="text18">
                    @Html.TextBoxFor(model => model.TemplateName, new { @class = "textfield1" })
                    @Html.ValidationMessageFor(model => model.TemplateName)
                </div>
            </div>
            <div class="form-group">
                <label class="text18">Template Text</label>
            </div>
            <div class="text18">
                @Html.TextAreaFor(model => model.TemplateText, new { @class = "textarea1", @style= "width: 100% !important; height: 600px !important;" })
                @Html.ValidationMessageFor(model => model.TemplateText)
            </div>
            <div style="padding:20px;"></div>
            <div class="row">
                <div class="pull-right">
                    <div class="form-group" style="margin: 20px;">
                        <input type="submit" value="Submit" class="button1" />
                        <a href="~/Admin/EmailTemplates/"><button class="button1">Cancel</button></a>
                    </div>
                </div>
            </div>
        }
    </div>
    




