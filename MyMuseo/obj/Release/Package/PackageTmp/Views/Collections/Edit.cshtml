@model MyMuseo.Models.Collection

@{
    ViewBag.Title = "Re-order Collection";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Re Order Collection Items</h2>

<link rel="stylesheet" href="~/Content/jquery.gridster.min.css" type="text/css" media="screen" />
<script src="@Url.Content("~/Scripts/jquery.gridster.min.js")" type="text/javascript"></script>


@using (Html.BeginForm("Edit", "Collections", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="gridster">
        <ul>
            <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">0<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="1" data-col="2" data-sizex="1" data-sizey="1">1<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="1" data-col="3" data-sizex="1" data-sizey="1">2<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="1" data-col="4" data-sizex="1" data-sizey="1">3<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="1" data-col="5" data-sizex="1" data-sizey="1">4<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="2" data-col="1" data-sizex="1" data-sizey="1">5<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="2" data-col="2" data-sizex="1" data-sizey="1">6<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="2" data-col="3" data-sizex="1" data-sizey="1">7<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="2" data-col="4" data-sizex="1" data-sizey="1">8<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="2" data-col="5" data-sizex="1" data-sizey="1">9<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="3" data-col="1" data-sizex="1" data-sizey="1">10<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="3" data-col="2" data-sizex="1" data-sizey="1">11<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="3" data-col="3" data-sizex="1" data-sizey="1">12<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="3" data-col="4" data-sizex="1" data-sizey="1">13<img src="~/Content/images/place-holder.png" /></li>
            <li data-row="3" data-col="5" data-sizex="1" data-sizey="1">14<img src="~/Content/images/place-holder.png" /></li>
        </ul>
    </div>
    <p>
        <input type="submit" value="Save" />
    </p>
            
    <button class="js-seralize">Serialize</button>
    <textarea id = "log" ></textarea >
}

<script type="text/javascript">
    var gridster;
    $(function () {
        gridster = $(".gridster ul").gridster({
            widget_base_dimensions: [250, 250],
            widget_margins: [5, 5]
        }).data('gridster');

        $('.js-seralize').on('click', function () {
            var s = gridster.serialize();
            $('#log').val(JSON.stringify(s));
        })
    });
</script>