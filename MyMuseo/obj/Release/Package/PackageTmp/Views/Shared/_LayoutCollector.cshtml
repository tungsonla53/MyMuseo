<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - myMuseo</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div class="navbar navbar-default navbar-fixed-top" style="background-color: white !important;">
        
        <div class="container">
            <div>
                <div class="navbar-header">
                    <button button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
            <a href="~/Home" title="myMuseo">
                <img style="width:220px; height:46px;padding: 6px; margin-top: 10px;"
                src="~/Content/images/myMuseo.png">
            </a>
            @Html.Partial("_LoginPartial")
            </div>
            

            <div id="navbar" class="collapse navbar-collapse navbar-responsive-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Profile", "Edit", "Collectors")</li>
                    <li>@Html.ActionLink("Collection", "Index", "Collections")</li>
                    <li>@Html.ActionLink("Collectible", "Index", "Collectibles")</li>
                    <li>@Html.ActionLink("Artist", "Index", "Artists")</li>
                    <li>@Html.ActionLink("Security", "Index", "Manage")</li>
                </ul>
            </div>
        </div>
    </div>


    <div style="margin-top:54px;">
        @RenderBody()
        
        <footer>
            @Html.Partial("_Footer")
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
