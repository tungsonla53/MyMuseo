                                                                    <textarea id="reply-thread" name="reply-thread" rows="2" style="width: 100%; color: #000000; border-radius: 6px;"></textarea>
                                                                </div>
                                                                <input type="hidden" name="T@thread.ThreadId" id="T@thread.ThreadId" value="@thread.ThreadId" />
