                                                                            {
                                                                                <div>
                                                                                    <a href="#" onclick='showReply("@post.PostId")'>Reply</a>
                                                                                </div>
                                                                            }
                                                                            else
                                                                            {
                                                                                <div>
                                                                                    <span>  </span>
                                                                                </div>
                                                                            }

                                                                            <div id="@post.PostId" style="display:none;">
