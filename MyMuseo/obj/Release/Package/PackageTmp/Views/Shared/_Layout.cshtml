                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>


        </div>

    </div>


    <script>

        function postLike(id, threadid) {
            var count = $('#' + id).text();
            var url = "/Xtra/LikeMsg";
            $.get(url, { input: count, thread: threadid }, function (data) {
                $("#" + id).html(data);
            });
        }

        function postInterested(id, threadid) {
            var count = $('#' + id).text();
            var url = "/Xtra/InterestedMsg";
            $.get(url, { input: count, thread: threadid }, function (data) {
                $("#" + id).html(data);
            });
        }

        function postGoing(id, threadid) {
            var count = $('#' + id).text();
            var url = "/Xtra/GoingMsg";
            $.get(url, { input: count, thread: threadid }, function (data) {
                $("#" + id).html(data);
            });
        }

        function deleteThread(threadid) {
            var url = "/Xtra/DeleteThread";
            $.get(url, {thread: threadid }, function () {
                //alert("Delete");
                window.location.reload(true);
            });
        }

        function showReply(id) {
            $('#' + id).toggle();
        }

        function showComment(id) {
            $('#' + id).toggle();
            $('#L' + id).toggle();
        }

        function showEdit(id) {
            $('#L' + id).toggle();
            $('#T' + id).toggle();
        }

        function togglePost() {
            $('#post-div-label').toggle();
            $('#post-div-form').toggle();
        }

        function showEvent() {
            $('#main-area').hide();
            $('#event-area').show();
        }

        function hideEvent() {
            $('#main-area').show();
            $('#event-area').hide();
        }

        function showPhoto() {
            $('#main-area').hide();
            $('#photo-area').show();
        }

        function hidePhoto() {
            $('#main-area').show();
            $('#photo-area').hide();
        }

        function toggleCP() {
            var cp = document.getElementById("cp");
            cp.style.height = window.innerHeight - 180 + "px";
            var cp2 = document.getElementById("cp2");
            cp2.style.height = window.innerHeight - 180 + "px";
            if (cp.style.right == "0px") {
                if (window.innerWidth <= 800) {
                    cp.style.right = "-" + (window.innerWidth - 40) + "px";
                }
                else
                {
                    cp.style.right = "-460px";
                }
                $("#vtext").show();
                $("#menu-toggle").show();
                cp2.style.marginLeft = "-44px";
            } else {
                cp.style.right = "0px";
                $("#vtext").hide();
                $("#menu-toggle").hide();
                cp2.style.marginLeft = "-18px";
            }
        }

        function hideMobile() {
            //var cp = document.getElementById("cp");
            //var cp2 = document.getElementById("cp2");
            //cp.style.right = "-" + (window.innerWidth - 40) + "px";
            //$("#vtext").show();
            //$("#menu-toggle").show();
            //cp2.style.marginLeft = "-44px";
        }

        $(window).load(function () {
            var cp = document.getElementById("cp");
            var cp2 = document.getElementById("cp2");
            if (window.innerWidth <= 800) {
                cp.style.width = (window.innerWidth - 20) + "px";
                cp2.style.width = (window.innerWidth - 20) + "px";
                cp.style.right = "-" + (window.innerWidth - 40) + "px";
                cp2.style.marginLeft = "-44px";
                $("#vtext").show();
                $("#menu-toggle").show();
            }
            else
            {
                cp.style.width = "480px";
                cp2.style.width = "480px";
            }
        });

    </script>
