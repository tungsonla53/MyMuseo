                                                                <span id="@interestedLabel">@thread.InterestedCount</span> <span>Interested </span>
                                                            }
                                                            <span id="@likeLabel">@thread.LikesCount</span> Likes
                                                            @if (Request.IsAuthenticated)
                                                            {
                                                                <a style="margin-left:10px; color: white;" href="#" onclick="postLike('@likeLabel', '@thread.ThreadId')">Like <span class="glyphicon glyphicon-heart"></span></a>
